<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:widgets="clr-namespace:App1.Views.Widgets" xmlns:iconfont="clr-namespace:App1.Resources.Font.IconFont"
             x:Name="MyFriendPage"
             x:Class="App1.Views.InfoFriendView">
    
    <ContentPage.Content>

        <StackLayout Margin="{StaticResource SmallMargin}">
            <widgets:CustomLabelKeyValue TextKey="Name" 
                                         Label="{Binding Name}" 
                                         Icon="{x:Static iconfont:IconFont.fi_user_avatar}"/>
            <widgets:CustomLabelKeyValue TextKey="Number" 
                                         Label="{Binding Number}"
                                         Icon="{x:Static iconfont:IconFont.fi_call}"/>
            <widgets:CustomLabelKeyValue TextKey="Address" 
                                         Label="{Binding Address}"
                                         Icon="{x:Static iconfont:IconFont.fi_earth}"/>
            <widgets:CustomLabelKeyValue TextKey="Contact" 
                                         Label="{Binding Email}"
                                         Icon="{x:Static iconfont:IconFont.fi_wechat}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>